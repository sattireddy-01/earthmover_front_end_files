<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    tools:context=".WorkTimerActivity">

    <!-- Top Image -->
    <ImageView
        android:id="@+id/iv_machine_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/jcb3dx_1"
        android:scaleType="centerCrop"
        android:background="#2C2C2C" />

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_machine_image"
        android:layout_above="@+id/bottom_navigation_work_timer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Work Timer Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Timer"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp" />

            <!-- Timer Input Fields -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <!-- Hours -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hours"
                        android:textColor="#C0C0C0"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/et_hours"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/timer_input_background"
                        android:text="00"
                        android:textColor="@android:color/white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textAlignment="center"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                </LinearLayout>

                <!-- Minutes -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minutes"
                        android:textColor="#C0C0C0"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/et_minutes"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/timer_input_background"
                        android:text="00"
                        android:textColor="@android:color/white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textAlignment="center"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                </LinearLayout>

                <!-- Seconds -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seconds"
                        android:textColor="#C0C0C0"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/et_seconds"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/timer_input_background"
                        android:text="00"
                        android:textColor="@android:color/white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textAlignment="center"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                </LinearLayout>

            </LinearLayout>

            <!-- Start Button -->
            <Button
                android:id="@+id/btn_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FFC400"
                android:text="Start"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp" />

            <!-- Pause Button -->
            <Button
                android:id="@+id/btn_pause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#8B4513"
                android:text="Pause"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp" />

            <!-- Stop Button -->
            <Button
                android:id="@+id/btn_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8B4513"
                android:text="Stop"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_work_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#212121"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:menu="@menu/operator_bottom_nav" />

</RelativeLayout>

