<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".OperatorSignupActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_operator_signup"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/btn_operator_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:backgroundTint="#FFEB3B"
        android:padding="16dp"
        android:text="Signup"
        android:textColor="#000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_operator_signup"
        android:layout_above="@+id/btn_operator_signup"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_operator"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/earthmover_main" />

            <TextView
                android:id="@+id/tv_create_operator_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:text="Create Operator Account"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_operator_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:background="#4A4A4A"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A0A0A0" />

            <EditText
                android:id="@+id/et_operator_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:background="#4A4A4A"
                android:hint="Phone"
                android:inputType="phone"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A0A0A0" />

            <EditText
                android:id="@+id/et_operator_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:background="#4A4A4A"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A0A0A0" />

            <EditText
                android:id="@+id/et_operator_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:background="#4A4A4A"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A0A0A0" />

            <EditText
                android:id="@+id/et_operator_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:background="#4A4A4A"
                android:hint="Create Password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A0A0A0" />

            <EditText
                android:id="@+id/et_operator_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:background="#4A4A4A"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A0A0A0" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
