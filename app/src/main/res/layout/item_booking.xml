<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#4A4A4A"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Olive Background -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4A4021"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_machine_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">
                <ImageView
                    android:id="@+id/iv_booking_machine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:src="@drawable/ic_jcb" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cv_machine_icon"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_booking_machine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maid Service"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_booking_operator_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NARI NIKESH"
                    android:textColor="#CCBD8F"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_booking_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_status_badge"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"
                    android:text="Pending approval"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="#CCBD8F" />

                <TextView
                    android:id="@+id/tv_booking_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="3 hours"
                    android:textColor="#CCBD8F"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@android:drawable/ic_menu_help"
                    app:tint="#CCBD8F" />

                <TextView
                    android:id="@+id/tv_booking_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="₹900"
                    android:textColor="#CCBD8F"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_rounded_bottom"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:tint="#4A4021" />
                <TextView
                    android:id="@+id/tv_booking_date_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="04/01/2026 at 15:20:00"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="#4A4021" />
                <TextView
                    android:id="@+id/tv_booking_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Khammam, Telangana, India"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_call"
                    app:tint="#4A4021" />
                <TextView
                    android:id="@+id/tv_booking_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="8247845742"
                    android:textColor="#5E35B1"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_cancel_booking"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_cancel_button"
                android:paddingHorizontal="24dp"
                android:text="✕ Cancel"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <!-- Operator Actions -->
            <LinearLayout
                android:id="@+id/ll_operator_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_decline_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_cancel_button"
                    android:paddingHorizontal="16dp"
                    android:text="Decline"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btn_accept_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:backgroundTint="#4CAF50"
                    android:paddingHorizontal="16dp"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- User Completion Action -->
            <Button
                android:id="@+id/btn_complete_booking"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:backgroundTint="#2196F3"
                android:paddingHorizontal="24dp"
                android:text="✓ Mark Complete"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>




