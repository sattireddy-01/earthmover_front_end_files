<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".AdminMachinePricingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_machine_pricing"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#212121"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Machine Pricing"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/et_search_machine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_machine_pricing"
        android:layout_margin="16dp"
        android:background="#6B8E23"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:hint="Search"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textColorHint="#C0C0C0" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_search_machine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/et_search_machine"
        android:layout_above="@+id/bottom_navigation_admin"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- JCB 3DX Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#2C2C2C"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_machine_1_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Model: JCB 3DX"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_machine_1_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Price: $150/hr"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_machine_1_updated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Updated: 2024-01-20"
                            android:textColor="#A0A0A0"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_edit_jcb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Edit"
                        android:textColor="@android:color/white"
                        android:background="#6B8E23"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/jcb3dx_1"
                        android:scaleType="centerCrop"
                        android:background="#4A4A4A"
                        android:padding="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Caterpillar 320 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#2C2C2C"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_machine_2_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Model: Caterpillar 320"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_machine_2_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Price: $200/hr"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_machine_2_updated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Updated: 2024-02-15"
                            android:textColor="#A0A0A0"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_edit_caterpillar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Edit"
                        android:textColor="@android:color/white"
                        android:background="#6B8E23"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/earthmover_featured_1"
                        android:scaleType="centerCrop"
                        android:background="#4A4A4A"
                        android:padding="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Komatsu PC200 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#2C2C2C"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_machine_3_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Model: Komatsu PC200"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_machine_3_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Price: $180/hr"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_machine_3_updated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Updated: 2024-03-10"
                            android:textColor="#A0A0A0"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_edit_komatsu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Edit"
                        android:textColor="@android:color/white"
                        android:background="#6B8E23"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/earthmover_featured_2"
                        android:scaleType="centerCrop"
                        android:background="#4A4A4A"
                        android:padding="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- John Deere 5050D Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#2C2C2C"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_machine_4_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Model: John Deere 5050D"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_machine_4_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Price: ₹1200/hr"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_machine_4_updated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Updated: Not updated"
                            android:textColor="#A0A0A0"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_edit_john_deere_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Edit"
                        android:textColor="@android:color/white"
                        android:background="#6B8E23"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/earthmover_featured_1"
                        android:scaleType="centerCrop"
                        android:background="#4A4A4A"
                        android:padding="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- John Deere 5310M Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#2C2C2C"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_machine_5_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Model: John Deere 5310M"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_machine_5_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Price: ₹1200/hr"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_machine_5_updated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Updated: Not updated"
                            android:textColor="#A0A0A0"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_edit_john_deere_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Edit"
                        android:textColor="@android:color/white"
                        android:background="#6B8E23"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/earthmover_featured_2"
                        android:scaleType="centerCrop"
                        android:background="#4A4A4A"
                        android:padding="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_machine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation_admin"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:backgroundTint="#FFC400"
        app:tint="#000000" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#2C2C2C"
        app:menu="@menu/admin_bottom_nav"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF" />

</RelativeLayout>

