<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    tools:context=".OperatorLicenseDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_license_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#2C2C2C">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_license_details"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#2C2C2C">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Operator Signup"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar_license_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar_license_details"
        android:scrollbars="vertical"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Instruction Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Please provide your license details, RC, and machine photos to complete your signup."
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.2" />

            <!-- License Number -->
            <EditText
                android:id="@+id/et_license_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#C0C0C0"
                android:hint="License Number"
                android:textSize="16sp" />

            <!-- RC Number -->
            <EditText
                android:id="@+id/et_rc_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#C0C0C0"
                android:hint="RC Number"
                android:textSize="16sp" />

            <!-- Equipment Type -->
            <Spinner
                android:id="@+id/spinner_equipment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:popupBackground="#2C2C2C"
                android:spinnerMode="dropdown" />

            <!-- Machine Model -->
            <EditText
                android:id="@+id/et_machine_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#C0C0C0"
                android:hint="Machine Model"
                android:textSize="16sp" />

            <!-- Machine Year -->
            <EditText
                android:id="@+id/et_machine_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#C0C0C0"
                android:hint="Machine Year"
                android:inputType="number"
                android:textSize="16sp" />

            <!-- Upload Machine Photos Heading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Upload Machine Photos"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Photo Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- First Row - Two Photos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/iv_photo_1"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/jcb3dx_1"
                        android:background="@drawable/rounded_corner_background"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Machine Photo 1" />

                    <ImageView
                        android:id="@+id/iv_photo_2"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/jcb3dx_2"
                        android:background="@drawable/rounded_corner_background"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Machine Photo 2" />

                </LinearLayout>

                <!-- Second Row - One Photo -->
                <ImageView
                    android:id="@+id/iv_photo_3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jcb3dx_3"
                    android:background="@drawable/rounded_corner_background"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Machine Photo 3" />

            </LinearLayout>

            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_submit_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC400"
                android:padding="16dp"
                android:text="Submit"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>













